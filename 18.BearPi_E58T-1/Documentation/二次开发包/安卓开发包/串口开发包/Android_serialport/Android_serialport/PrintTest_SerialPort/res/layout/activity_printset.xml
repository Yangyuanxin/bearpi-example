<com.szzk.percent.support.PercentRelativeLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:imagecontrol="http://schemas.android.com/apk/res-auto" 
     android:background="@drawable/background_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
 <com.szzk.percent.support.PercentRelativeLayout
        android:id="@+id/top_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp"     
        app:layout_heightPercent="12%w"    
        android:background="@drawable/top_bg"
         >
         <TextView
            android:id="@+id/title_tv"
            app:layout_heightPercent="11%w"     
         	android:layout_width="match_parent"
         	android:layout_height="0dp"
         	android:gravity="center"
         	android:text="@string/test_printer"
         	app:layout_textSizePercent="5%w"         	  
         	android:textColor="#fff"
         	android:layout_centerVertical="true"
         />
        <ImageView 
            android:id="@+id/back_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="8%w"
        	app:layout_heightPercent="8%w"
        	android:background="@drawable/back"
        	android:layout_centerVertical="true"
        	android:layout_marginLeft="5dp"
        	android:onClick="back"
            />   
	 </com.szzk.percent.support.PercentRelativeLayout>
    <EditText
        android:layout_marginTop="20dp"
        android:layout_below="@+id/top_bg"
        android:id="@+id/btname_et"
        android:layout_width="100dp"
        android:layout_height="30dp"
        app:layout_heightPercent="11%w"
        app:layout_widthPercent="47%w"        
        app:layout_textSizePercent="5%w"       
        android:hint="请输入50-200之间值"
        android:background="@drawable/et"
        android:paddingLeft="5dp"
        android:text="88"
        android:inputType="number"
         />
      <Button
        android:layout_marginTop="20dp"
        android:layout_below="@+id/top_bg"
        android:id="@+id/bt_btname"
        android:layout_alignParentRight="true"
         android:layout_width="100dp"
        android:layout_height="30dp"
        app:layout_heightPercent="11%w"
        app:layout_widthPercent="47%w"
         app:layout_textSizePercent="5%w"     
        android:text="设置标签缝隙位"
        />
       <EditText
        android:id="@+id/hot_et"
        android:layout_below="@+id/bt_btname"
         android:layout_width="100dp"
        android:layout_height="30dp"
        app:layout_heightPercent="11%w"
        app:layout_widthPercent="47%w"
         android:layout_marginTop="10dp"
         app:layout_textSizePercent="5%w"    
        android:hint="浓淡范围50-5000"
         android:background="@drawable/et"
          android:paddingLeft="5dp"
          android:inputType="number"
          android:text="1250"
        />
        <Button
        android:id="@+id/bt_hot"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/bt_btname"
        android:layout_width="100dp"
        android:layout_height="30dp"
        app:layout_heightPercent="11%w"
        app:layout_widthPercent="47%w"
         android:layout_marginTop="10dp"
         app:layout_textSizePercent="5%w"    
        android:text="浓淡设置"
        />
        
      <EditText
        android:id="@+id/ptime_et"
        android:layout_below="@+id/bt_hot"
         android:layout_width="100dp"
        android:layout_height="30dp"
        app:layout_heightPercent="11%w"
        app:layout_widthPercent="47%w"
         android:layout_marginTop="10dp"
         app:layout_textSizePercent="5%w"    
        android:hint=""
         android:background="@drawable/et"
          android:paddingLeft="5dp"
          android:inputType="number"
          android:text="200"
        />
        <Button
        android:id="@+id/bt_ptime"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/bt_hot"
        android:layout_width="100dp"
        android:layout_height="30dp"
        app:layout_heightPercent="11%w"
        app:layout_widthPercent="47%w"
         android:layout_marginTop="10dp"
         app:layout_textSizePercent="5%w"    
        android:text="加热时间"
        />

       <Button
        android:id="@+id/bt_printtestpage"
        android:layout_below="@+id/bt_ptime"
         android:layout_width="100dp"
        android:layout_height="30dp"
        app:layout_heightPercent="11%w"
        app:layout_widthPercent="47%w"
         android:layout_marginTop="10dp"
         app:layout_textSizePercent="5%w"     
         android:onClick="printtestpage"
        android:text="@string/printtestpage"        
        />
       <Button
        android:id="@+id/bt_checkpage"
        android:layout_below="@+id/bt_ptime"
        android:layout_alignParentRight="true"
         android:layout_width="100dp"
        android:layout_height="30dp"
        app:layout_heightPercent="11%w"
        app:layout_widthPercent="47%w"
         android:layout_marginTop="10dp"
         app:layout_textSizePercent="5%w"     
         android:onClick="checkpage"  
        android:text="@string/check_for_paper"
         />
       
       <Button
        android:id="@+id/bt_woshou"
        android:layout_below="@+id/bt_checkpage"
        android:layout_width="100dp"
        android:layout_height="30dp"
        app:layout_heightPercent="11%w"
        app:layout_widthPercent="47%w"
         android:layout_marginTop="10dp"
         app:layout_textSizePercent="5%w"   
        android:text="检查握手状态"
        />
       
       <Button
        android:id="@+id/bt_voltage"
         android:layout_alignParentRight="true"
        android:layout_below="@+id/bt_checkpage"
        android:layout_width="100dp"
        android:layout_height="30dp"
        app:layout_heightPercent="11%w"
        app:layout_widthPercent="47%w"
         android:layout_marginTop="10dp"
         app:layout_textSizePercent="5%w"    
        android:text="获取电压"
         />
		<EditText
        android:id="@+id/devicename_et"
        android:layout_below="@+id/bt_voltage"
        android:layout_width="100dp"
        android:layout_height="30dp"
        app:layout_heightPercent="11%w"
        app:layout_widthPercent="47%w"
        android:layout_marginTop="10dp"
        app:layout_textSizePercent="5%w" 
        android:hint="设置设备名称"
         android:background="@drawable/et"
          android:paddingLeft="5dp"
           android:text="Printer_12"
         />
	    
	    <Button
        android:id="@+id/bt_devicename"
         android:layout_alignParentRight="true"
        android:layout_below="@+id/bt_voltage"
         android:layout_width="100dp"
        android:layout_height="30dp"
        app:layout_heightPercent="11%w"
        app:layout_widthPercent="47%w"
         android:layout_marginTop="10dp"
         app:layout_textSizePercent="5%w" 
        android:text="设置设备名称"
         />
		<Button
        android:id="@+id/bt_label"
         android:layout_alignParentRight="true"
        android:layout_below="@+id/bt_devicename"
         android:layout_width="100dp"
        android:layout_height="30dp"
        app:layout_heightPercent="11%w"
        app:layout_widthPercent="47%w"
         android:layout_marginTop="10dp"
         app:layout_textSizePercent="5%w" 
        android:text="设置标签模式"       
         />
		<Button
        android:id="@+id/bt_receipts"
        android:layout_below="@+id/bt_devicename"
         android:layout_width="100dp"
        android:layout_height="30dp"
        app:layout_heightPercent="11%w"
        app:layout_widthPercent="47%w"
         android:layout_marginTop="10dp"
         app:layout_textSizePercent="5%w" 
        android:text="设置小票模式"
         />
		<TextView 
		    android:id="@+id/backdata1_tv"
		    android:layout_below="@+id/bt_receipts"
		    android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:background="#ffffff"
        	android:text="返回数据："
		    />
		<TextView 
		    android:id="@+id/backdata_tv"
		    android:layout_below="@+id/backdata1_tv"
		    android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:background="#ffffff"
        	android:text="返回数据："
		    />
		<TextView 
		    android:id="@+id/printstate_tv"
		    android:layout_below="@+id/backdata_tv"
		    android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:background="#ffffff"
        	android:text="打印状态："
		    />
</com.szzk.percent.support.PercentRelativeLayout>
